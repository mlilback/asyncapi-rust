#!/bin/sh
# Pre-commit hook: Check formatting and clippy before allowing commit
# Installed via cargo-husky

set -e

echo "ğŸ” Running pre-commit checks..."
echo ""

# Check formatting
echo "ğŸ“ Checking rustfmt..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo "âŒ Formatting check failed!"
    echo "ğŸ’¡ Run: cargo fmt --all"
    echo ""
    echo "To skip this check: git commit --no-verify"
    exit 1
fi
echo "âœ… Formatting check passed"
echo ""

# Run clippy
echo "ğŸ” Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo ""
    echo "âŒ Clippy check failed!"
    echo "ğŸ’¡ Fix the warnings above"
    echo ""
    echo "To skip this check: git commit --no-verify"
    exit 1
fi
echo "âœ… Clippy check passed"
echo ""

echo "âœ… All pre-commit checks passed!"
